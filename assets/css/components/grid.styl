.container
	width 100%
	position absolute
	z-index 10
.row
	display flex
	flex-wrap wrap

.grid
	display flex

.column
	flex-direction column

.justifyContent-center
	justify-content center

.justifyContent-between
	justify-content space-between

.justifyContent-fEnd
	justify-content flex-end

.alignItems-center
	align-items center

.alignItems-fEnd
	align-items flex-end

.header-container
	padding 6rem 9rem 1rem 9rem 

.content-container
	padding 6rem 9rem 0 9rem 

	.grid:not(:last-child)
		padding-bottom 30px

.intro-container
	width 50%

.bold
	h1
		font-weight 700
		padding-bottom 0em

body
	margin 0

.bg-image
	width 100vw
	height 100vh

.logotype
	font-weight 700
	font-size 1.8em

.logo-link
	color #222

.icon
	padding-right 20px
	width 40px
	height 40px

.footer-container
	padding 0 9rem 0 9rem
	height 100%

footer
	z-index 10
	background-color #333
	bottom:0;width 100%
	height 120px
	position absolute

	h2, h3, i
		padding unset
		color white

	.material-icons
		padding-left 10px
		padding-right 10px

.underline
	text-decoration underline