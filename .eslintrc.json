{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "plugin:nuxt/recommended",
    "@nuxtjs",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "$nuxt": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    ["@babel/plugin-proposal-private-methods", { "loose": true }]
  ],
  "rules": {
    "no-console": 0,
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ]
  }
}